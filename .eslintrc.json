{
  "env": {
    "commonjs": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "rules": {
    "no-unused-vars": "warn",
    "prefer-const": "error",
    "semi": ["error", "never"],
    "max-len": ["error", { "code": 180 }]
  }
}